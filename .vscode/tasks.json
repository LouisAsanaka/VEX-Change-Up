{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "PROS: Build",
            "type": "shell",
            "command": "prosv5 make",
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "new",
                "focus": false
            },
            "problemMatcher": [],
        },
        {
            "label": "PROS: Build + Upload",
            "type": "shell",
            "command": "prosv5 make-upload",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new",
                "focus": false
            },
            "problemMatcher": [],
        },
        {
            "label": "PROS: Clean Project",
            "type": "shell",
            "command": "prosv5 make clean",
            "presentation": {
                "reveal": "always",
                "panel": "new",
                "focus": false
            },
            "problemMatcher": [],
        },
        {
            "label": "PROS: Rebuild compile_commands.json",
            "type": "shell",
            "command": "prosv5 build-compile-commands",
            "presentation": {
                "reveal": "always",
                "panel": "new",
                "focus": false
            },
            "problemMatcher": [],
        },        
        {
            "label": "PROS: Upload",
            "type": "shell",
            "command": "prosv5 upload",
            "presentation": {
                "reveal": "always",
                "panel": "new",
                "focus": false
            },
            "problemMatcher": [],
        },
        {
            "label": "PROS: Terminal",
            "type": "shell",
            "command": "prosv5 terminal --debug",
            "presentation": {
                "reveal": "always",
                "panel": "new",
                "focus": false
            },
            "problemMatcher": [],
        },
        {
            "label": "TEST: cppcheck",
            "type": "shell",
            "command": "cppcheck --template=gcc --enable=all --std=c++11 --force --suppress=missingIncludeSystem -i ./test .",
            "group": "test",
            "problemMatcher": {
                "fileLocation": "relative",
                "severity": "warning",
                "pattern":{
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        }
    ]
}